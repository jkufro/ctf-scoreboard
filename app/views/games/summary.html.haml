- content_for :header do
  = t('game.summary.header')

%h3.muted
  = t('game.summary.topfive')
%br/
= render partial: "games/divisions", locals: { divisions: @game.divisions, active_division: @active_division}
%hr
/ Only show the flags per hour count when we have more than 1 datapoint to show
- if @flags_per_hour.count > 1
  %h3.muted
    Flag Submissions
    = line_chart @line_chart_data, colors: ['#b8d12f', '#00abca']
